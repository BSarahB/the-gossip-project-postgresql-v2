
<!-- on arrive a cette view par le controller cities def show qui a ete pointe par la route city_path-->
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Infos ville : <%= @city.name %> </h1>
    <p class="lead">Les auteurs de la ville  <%= @city.name %></p>
  </div>
</div>
  <p>

  <% @city.users.each do |user| %>
    <ul class="list-group">
      <li class="list-group-item active">Utilisateur : <%= user.first_name %> <%= user.last_name %></li>
      <% user.gossips.each do |gossip| %>
        <li class="list-group-item"><%= gossip.title %> </li>
        <li class="list-group-item"><%= gossip.content %> </li>
        <% end %>
    </ul>
    <br/>
  <% end %>

  </p>
